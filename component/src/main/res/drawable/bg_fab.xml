<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/color_secondary" />
            <padding android:bottom="@dimen/padding_secondary" android:left="@dimen/padding_secondary" android:right="@dimen/padding_secondary" android:top="@dimen/padding_secondary" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/color_primary_divide" />
            <padding android:bottom="@dimen/padding_secondary" android:left="@dimen/padding_secondary" android:right="@dimen/padding_secondary" android:top="@dimen/padding_secondary" />
        </shape>
    </item>

</selector>