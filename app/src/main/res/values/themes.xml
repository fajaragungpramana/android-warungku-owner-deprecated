<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WarungKu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Text -->
    <style name="PrimaryHeading">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/text_primary_heading</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_on_primary_light</item>
        <item name="android:textSize">@dimen/text_primary_button</item>
    </style>

    <style name="PrimaryBody">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/text_primary_body</item>
    </style>

    <style name="PrimaryCaption">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/text_primary_caption</item>
    </style>

    <style name="BottomNavigationViewText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_secondary_caption</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/color_secondary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">@dimen/padding_secondary</item>
        <item name="tabPaddingEnd">@dimen/padding_secondary</item>
        <item name="tabSelectedTextColor">@color/color_secondary</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_primary_divide</item>
        <item name="android:textSize">@dimen/text_primary_body</item>
    </style>

</resources>